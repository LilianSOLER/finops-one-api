generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AwsMetrics{
    id Int @id @default(autoincrement())
    timePeriod DateTime?
    service String?
    amortizedCost Float?
    blendedCost Float?
    unblendedCost Float?
    netUnblendedCost Float?
    netAmortizedCost Float?
    normalizedUsageAmount Int?
    usageQuantity Int?
    // TODO: Add link to project table
}

model AwsCredentials{
  id Int @id @default(autoincrement())
  createdAt DateTime
  accessKeyId String @unique
  secretAccessKey String

    // TODO : Add account, user ou project for the associated credentials
}

model User{
    id Int @id @default(autoincrement())
    email String @unique
    role Role @default(USER)
    hash String
}

enum Role{
  USER
  ADMIN
}
